// ============================================================================
// NIRI CONFIGURATION
// ============================================================================
// Configuration reference: https://github.com/YaLTeR/niri/wiki/Configuration:-Introduction
// KDL format documentation: https://kdl.dev

// ============================================================================
// INPUT CONFIGURATION
// ============================================================================

input {
    keyboard {
        xkb {
            // Keyboard layout configuration
            // See xkeyboard-config(7) for more options
            // layout "us,ru"
            // options "grp:win_space_toggle,compose:ralt,ctrl:nocaps"
        }
        numlock
    }

    mouse {
        // Mouse configuration options (all disabled by default)
        // off
        // natural-scroll
        // accel-speed 0.2
        // accel-profile "flat"
        // scroll-method "no-scroll"
    }

    // Mouse behavior
    // warp-mouse-to-focus
    focus-follows-mouse max-scroll-amount="80%"
}

// ============================================================================
// OUTPUT CONFIGURATION
// ============================================================================
// Find output names with: niri msg outputs
// More info: https://github.com/YaLTeR/niri/wiki/Configuration:-Outputs

output "Virtual-1" {
    // Basic display settings
    mode "1920x1080@60.000"  // Resolution and refresh rate
    scale 1                   // Display scaling (1.0 = 100%, 1.5 = 150%, etc.)
    transform "normal"        // Rotation: normal, 90, 180, 270, flipped-*
    
    // Position in global coordinate space (affects directional actions)
    position x=1280 y=0
    
    // off  // Uncomment to disable this output
}

// ============================================================================
// LAYOUT CONFIGURATION
// ============================================================================
// More info: https://github.com/YaLTeR/niri/wiki/Configuration:-Layout

layout {
    // Basic layout settings
    gaps 12
    center-focused-column "never"  // Options: "never", "always", "on-overflow"
    default-column-width { proportion 0.5; }

    // Preset column widths (toggled with Mod+R)
    preset-column-widths {
        proportion 0.33333  // 1/3 width
        proportion 0.5      // 1/2 width
        proportion 0.66667  // 2/3 width
        proportion 1.0      // Full width
        fixed 1920          // Fixed pixel width
    }

    // Preset window heights (toggled with Mod+Shift+R)
    // preset-window-heights { }

    // Focus ring (currently disabled)
    focus-ring {
        off
        width 1
        active-color "#7fc8ff"
        inactive-color "#505050"
        active-gradient from="#80c8ff" to="#bbddff" angle=45
        // inactive-gradient from="#505050" to="#808080" angle=45 relative-to="workspace-view"
    }

    // Border (currently disabled)
    border {
        off
        width 1
        active-color "#ffc87f"
        inactive-color "#505050"
        urgent-color "#9b0000"
        // active-gradient from="#ffbb66" to="#ffc880" angle=45 relative-to="workspace-view"
        // inactive-gradient from="#505050" to="#808080" angle=45 relative-to="workspace-view"
    }

    // Blur effects
    blur {
        on
        passes 3
        radius 10.0
        noise 0
    }


    // Window shadows (currently disabled)
    /*
    shadow {
        on
        draw-behind-window true
        softness 10
        spread 5
        offset x=5 y=5
        color "#0007"
    }
    */

    // Struts (outer gaps)
    struts {
        // left 64
        // right 64
        // top 64
        // bottom 64
    }
}

// ============================================================================
// PREFER NO CLIENT-SIDE DECORATIONS
// ============================================================================
// Uncomment this to encourage clients to not use client-side decorations.
prefer-no-csd

// ============================================================================
// CURSOR CONFIGURATION
// ============================================================================

cursor {
    // Change the cursor image.
    // xcursor-theme "default"
    // xcursor-size 24
}

// ============================================================================
// SCREENSHOT PATH
// ============================================================================
// Disable the built-in screenshot UI and save screenshots to ~/Screenshots.
screenshot-path "~/Screenshots"

// ============================================================================
// HOTKEY DAEMON CONFIGURATION
// ============================================================================
// Run a command upon window opening. This is useful for doing window-specific setup.
// spawn-at-startup "touch" "/tmp/niri-started"
spawn-at-startup "swww-daemon"
spawn-at-startup "plasma-polkit-agent"
spawn-at-startup "xwayland-satellite"
spawn-at-startup "bash" "-c" "python3 ~/.config/quickshell/scripts/niri_status.py"
spawn-at-startup "qs"
spawn-at-startup "bash" "-c" "wl-paste --type text --watch cliphist store | rofi -dmenu -p 'Clipboard History' -format 's' | cliphist decode | wl-copy"

// ============================================================================
// ENVIRONMENT VARIABLES
// ============================================================================

environment {
    // Set the DPI for X11 applications.
    QT_QPA_PLATFORM "wayland"
    DISPLAY ":0"
}

// ============================================================================
// WINDOW RULES
// ============================================================================
// Configure specific window behaviors
// More info: https://github.com/YaLTeR/niri/wiki/Configuration:-Window-Rules

window-rule {
    // Geometry rules
    geometry-corner-radius 12
    clip-to-geometry true
}

window-rule {
    match app-id="firefox"
    default-column-width { proportion 1.0; }
}

window-rule {
    match app-id="org.telegram.desktop"
    default-column-width { proportion 0.33333; }
}

window-rule {
    match app-id="discord"
    default-column-width { proportion 0.33333; }
}

window-rule {
    match is-active=false
    opacity 0.85
}

window-rule {
    match is-active=true
    opacity 0.95
}

// ============================================================================
// KEYBINDINGS
// ============================================================================
// More info: https://github.com/YaLTeR/niri/wiki/Configuration:-Key-Bindings

binds {
    // ========================================================================
    // COMPOSITOR CONTROLS
    // ========================================================================
    
    Mod+Shift+Slash { show-hotkey-overlay; }
    Mod+O { toggle-overview; }   
    // ========================================================================
    // APPLICATIONS
    // ========================================================================
    
    Mod+Return { spawn "kitty"; }
    Mod+Shift+E { spawn "thunar"; }
    Super+Space hotkey-overlay-title="Open the Application Launcher: rofi" { spawn "wofi" "--show" "drun" "-I"; }
    Super+V hotkey-overlay-title="Open the Clipboard History: rofi" { spawn "bash" "-c" "cliphist list | wofi -S dmenu| cliphist decode | wl-copy"; } 
    Mod+Q { close-window; }

    // Screenshots
    Print { screenshot; }
    Ctrl+Print { screenshot-screen; }
    Alt+Print { screenshot-window; }

    // ========================================================================
    // FOCUS MANAGEMENT
    // ========================================================================
    
    Mod+Left  { focus-column-left; }
    Mod+Down  { focus-window-down; }
    Mod+Up    { focus-window-up; }
    Mod+Right { focus-column-right; }
    Mod+H     { focus-column-left; }
    Mod+J     { focus-window-or-workspace-down; }
    Mod+K     { focus-window-or-workspace-up; }
    Mod+L     { focus-column-right; }

    Mod+Home { focus-column-first; }
    Mod+End  { focus-column-last; }

    // ========================================================================
    // WINDOW MOVEMENT
    // ========================================================================
    
    Mod+Shift+Left  { move-column-left; }
    Mod+Shift+Down  { move-window-down; }
    Mod+Shift+Up    { move-window-up; }
    Mod+Shift+Right { move-column-right; }
    Mod+Ctrl+H     { move-column-left; }
    Mod+Ctrl+J     { move-window-down-or-to-workspace-down; }
    Mod+Ctrl+K     { move-window-up-or-to-workspace-up; }
    Mod+Ctrl+L     { move-column-right; }

    Mod+Shift+Home { move-column-to-first; }
    Mod+Shift+End  { move-column-to-last; }

    // ========================================================================
    // FOCUS MONITOR
    // ========================================================================
    
    Mod+Shift+Ctrl+Left  { focus-monitor-left; }
    Mod+Shift+Ctrl+Down  { focus-monitor-down; }
    Mod+Shift+Ctrl+Up    { focus-monitor-up; }
    Mod+Shift+Ctrl+Right { focus-monitor-right; }
    Mod+Shift+Ctrl+H     { focus-monitor-left; }
    Mod+Shift+Ctrl+J     { focus-monitor-down; }
    Mod+Shift+Ctrl+K     { focus-monitor-up; }
    Mod+Shift+Ctrl+L     { focus-monitor-right; }

    // ========================================================================
    // MOVE TO MONITOR
    // ========================================================================
    
    Mod+Shift+Alt+Left  { move-column-to-monitor-left; }
    Mod+Shift+Alt+Down  { move-column-to-monitor-down; }
    Mod+Shift+Alt+Up    { move-column-to-monitor-up; }
    Mod+Shift+Alt+Right { move-column-to-monitor-right; }
    Mod+Shift+Alt+H     { move-column-to-monitor-left; }
    Mod+Shift+Alt+J     { move-column-to-monitor-down; }
    Mod+Shift+Alt+K     { move-column-to-monitor-up; }
    Mod+Shift+Alt+L     { move-column-to-monitor-right; }

    // ========================================================================
    // WORKSPACES
    // ========================================================================
    
    Mod+1 { focus-workspace 1; }
    Mod+2 { focus-workspace 2; }
    Mod+3 { focus-workspace 3; }
    Mod+4 { focus-workspace 4; }
    Mod+5 { focus-workspace 5; }
    Mod+6 { focus-workspace 6; }
    Mod+7 { focus-workspace 7; }
    Mod+8 { focus-workspace 8; }
    Mod+9 { focus-workspace 9; }

    Mod+Shift+1 { move-column-to-workspace 1; }
    Mod+Shift+2 { move-column-to-workspace 2; }
    Mod+Shift+3 { move-column-to-workspace 3; }
    Mod+Shift+4 { move-column-to-workspace 4; }
    Mod+Shift+5 { move-column-to-workspace 5; }
    Mod+Shift+6 { move-column-to-workspace 6; }
    Mod+Shift+7 { move-column-to-workspace 7; }
    Mod+Shift+8 { move-column-to-workspace 8; }
    Mod+Shift+9 { move-column-to-workspace 9; }

    // Workspace navigation
    Mod+U { focus-workspace-down; }
    Mod+I { focus-workspace-up; }
    Mod+Shift+U { move-column-to-workspace-down; }
    Mod+Shift+I { move-column-to-workspace-up; }

    // ========================================================================
    // WINDOW MANAGEMENT
    // ========================================================================
    
    Mod+Shift+Q { close-window; }
    Mod+R       { switch-preset-column-width; }
    Mod+Shift+R { switch-preset-window-height; }
    Mod+F       { maximize-column; }
    Mod+Shift+F { fullscreen-window; }
    Mod+C       { center-column; }

    // Column width adjustments
    Mod+Minus      { set-column-width "-10%"; }
    Mod+Equal      { set-column-width "+10%"; }
    Mod+Shift+Minus { set-window-height "-10%"; }
    Mod+Shift+Equal { set-window-height "+10%"; }

    // Reset sizes
    Mod+Shift+0 { reset-window-height; }

    // Consume or expel windows
    Mod+Comma  { consume-or-expel-window-left; }
    Mod+Period { consume-or-expel-window-right; }

    // ========================================================================
    // MEDIA KEYS & SPECIAL FUNCTIONS
    // ========================================================================
    
    XF86AudioRaiseVolume allow-when-locked=true { spawn "wpctl" "set-volume" "@DEFAULT_AUDIO_SINK@" "0.1+"; }
    XF86AudioLowerVolume allow-when-locked=true { spawn "wpctl" "set-volume" "@DEFAULT_AUDIO_SINK@" "0.1-"; }
    XF86AudioMute        allow-when-locked=true { spawn "wpctl" "set-mute" "@DEFAULT_AUDIO_SINK@" "toggle"; }
    XF86AudioMicMute     allow-when-locked=true { spawn "wpctl" "set-mute" "@DEFAULT_AUDIO_SOURCE@" "toggle"; }

    XF86MonBrightnessUp   allow-when-locked=true { spawn "brightnessctl" "set" "10%+"; }
    XF86MonBrightnessDown allow-when-locked=true { spawn "brightnessctl" "set" "10%-"; }
}

